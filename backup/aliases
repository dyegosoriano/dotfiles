# SYSTEM
alias restart='sudo systemctl restart systemd-logind'
alias update='sudo apt update && apt upgrade -y'
alias shutdown='sudo shutdown now'

# TERMINAL
alias rank='sort | uniq -c | sort -nr | head -n 10'
alias history-command='history | grep'
alias file-size='du -sh * | sort -h'
alias mkdir='mkdir -pv'
alias ips='ip -c -br a'

alias lsa='ls -la --group-directories-first'

# GIT
alias glog='git log --oneline --graph --pretty=format:'%Cred%h%Creset %C(bold)%cr%Creset %Cgreen<%an>%Creset %s' --max-count=30'
alias gs='git status -sb'
alias gc='git commit -m'
alias ga='git add .'
alias gt='git'


[binds]

<Ctrl+Shift+X> = exec rm "$imv_current_file"; close # Delete the current image and move to the next one
<Ctrl+r> = exec mogrify -rotate 90 "$imv_current_file" # Rotate the currently open image by 90 degrees
<Ctrl+x> = exec rm "$imv_current_file"; quit # Delete the current image and quit the viewer
<Ctrl+p> = exec lp "$imv_current_file" # Print the current image file

[options]

background = 000000
fullscreen = true
overlay = true
